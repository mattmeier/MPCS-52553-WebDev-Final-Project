<% if cookies["user_id"].present? %>
  <h3>Your browsing history</h3>

  <p>
    <%= User.find_by(id: cookies["user_id"]).name%>
  </p>
<% end %>

<h2>Welcome to StayInTouch! </h2>
<br>
<h4> Stay in touch with your former classmates! </h4>

<p> Join our growing community of <%= @users.count %> users.<br>
<%= link_to "Sign up and create a new user profile now!", "/users/new" %></p>


<%= form_tag users_url, :method => "get" do %>
	Find your classmates by name:
	<%= text_field_tag :keyword %>
  	<%= submit_tag "Search" %>

<% end %>

<h4> Our users include alumni from all over the US: </h4>
<table class="table table-striped">
	
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>University</th>
		<th>Graduation Year</th>
		<th>Major</th>
		<th>Location</th>
		<th></th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<!--Retrieve and show the info of each user. Query database to find the user's details corresponding with the id-->
		<td><%= link_to user.name, user_path(user.id) %></td>
		<td><%= mail_to user.email,"#{user.email}"  %></td>
		<td><%= University.find_by(id: user.university_id).name %></td>
		<td><%= user.graduation_year %> </td>
		<td><%= user.major %> </td>
		<td><%= Location.find_by(id: user.location_id).city %></td>
		<td><%= link_to "Edit", "/users/#{user.id}/edit" %></td>
		<td><%= link_to "Delete",  user_path(user.id), :method => 'delete' %></td>
	</tr>
	<% end %>
	
</table>